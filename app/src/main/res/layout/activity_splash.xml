<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">


    <ImageView
        android:id="@+id/ivDefault"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tvJump"
        android:layout_width="@dimen/splash_jump_size"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="@dimen/splash_jump_size"
        android:text="@string/jump"
        android:background="@drawable/shape_splash_jump_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/marginScreenNormal"
        android:layout_marginTop="@dimen/marginScreenNormal"
        android:textColor="@color/colorBlackTextSub"
        android:textSize="@dimen/textSmall" />
</android.support.constraint.ConstraintLayout>