    <TextView
        android:id="@+id/tvMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="新闻今天11:22"
        android:textColor="@color/colorBlackTextHint"
        android:textSize="@dimen/textSmall"
        app:layout_constraintBottom_toBottomOf="@+id/llAvatar"
        app:layout_constraintLeft_toLeftOf="@+id/tvMsgTarget"
        app:layout_constraintTop_toBottomOf="@+id/tvMsgTarget" />

