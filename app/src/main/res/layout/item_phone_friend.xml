<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contract_item_h"
    android:background="@drawable/ripple_comon_selector"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/contract_icon_size"
        android:layout_height="@dimen/contract_icon_size"
        android:layout_marginLeft="@dimen/marginScreenLarge"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/btRight"
        android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginViewNormal"
        android:text="点点"
        android:textColor="@color/colorBlackTextNormal"
        android:textSize="@dimen/textLarge"
        app:layout_constraintBottom_toTopOf="@+id/tvNickName"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivAvatar" />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="121239128"
        android:textColor="@color/colorBlackTextSub"
        android:textSize="@dimen/textSmall"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <Button
        android:id="@+id/btRight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toorbar_bt_h"
        android:background="@drawable/shape_radio_ok_bt_enable"
        android:minWidth="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhiteTextImportant"
        android:textSize="@dimen/textSmall"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border0.5"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
