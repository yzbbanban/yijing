<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_comon_selector"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginViewLot">

    <ImageView
        android:id="@+id/ivModuleIcon"
        android:layout_width="@dimen/iconModuleLarge"
        android:layout_height="@dimen/iconModuleLarge"
        android:src="@color/colorDivider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModuleText"
        android:layout_marginTop="@dimen/marginViewLittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlackTextImportant"
        android:textSize="@dimen/textLittle"
        android:text="@string/saoyisao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivModuleIcon" />
</android.support.constraint.ConstraintLayout>
