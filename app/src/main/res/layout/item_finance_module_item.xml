<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_comon_selector"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/marginViewLot">

    <ImageView
        android:id="@+id/ivModuleIcon"
        android:layout_width="@dimen/mine_avatar_size"
        android:layout_height="@dimen/mine_avatar_size"
        android:layout_marginTop="4dp"
        android:src="@color/colorDivider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/asset_safe_lable" />

        <TextView
            android:id="@+id/tvModuleText"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:text="Jim"
            android:textColor="@color/colorBlackTextImportant"
            android:textSize="@dimen/textLittle" />
    </LinearLayout>

</LinearLayout>
